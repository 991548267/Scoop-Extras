{
    "version": "6.23.0",
    "description": "Powerful and easy to use e-book manager",
    "homepage": "https://calibre-ebook.com",
    "license": "GPL-3.0-only",
    "notes": "Calibre drops support for 32-bit after v6.0.0, if you are running a 32-bit system, please install 'versions/calibre5' from Versions bucket.",
    "architecture": {
        "64bit": {
            "url": "https://download.calibre-ebook.com/6.23.0/calibre-64bit-6.23.0.msi",
            "hash": "sha512:40353ad17d0b9f8184b3b56838701f1328e88083b91e381434e5af3ddfe87528e031588d90a017924f8fcb947a687a45d85803cd93c5124beeb4c50c4cca5864",
            "extract_dir": "PFiles\\Calibre2"
        }
    },
    "post_install": [
        "$fresh = if (!(Test-Path \"$persist_dir\")) { $true }",
        "# pre-create temp dir to avoid error when running calibre",
        "ensure \"$persist_dir\\temp\" | Out-Null",
        "# NOTE: Remove after 2024-02",
        "# Migration",
        "if ($fresh) {",
        "  # ...",
        "} else {",
        "  # ...",
        "}",
        "# NOTE END"
    ],
    "env_set": {
        "CALIBRE_CACHE_DIRECTORY": "$persist_dir\\cache",
        "CALIBRE_CONFIG_DIRECTORY": "$persist_dir\\Calibre Settings",
        "CALIBRE_OVERRIDE_DATABASE_PATH": "$persist_dir\\metadata.db",
        "CALIBRE_TEMP_DIR ": "$persist_dir\\temp"
    },
    "bin": [
        "calibre",
        "calibre-customize",
        "calibre-debug",
        "calibre-server",
        "calibre-smtp",
        "calibredb",
        "ebook-convert",
        "ebook-device",
        "ebook-edit",
        "ebook-meta",
        "ebook-polish",
        "ebook-viewer",
        "fetch-ebook-metadata",
        "lrf2lrs",
        "lrfviewer",
        "lrs2lrf",
        "markdown-calibre",
        "web2disk"
    ],
    "shortcuts": [
        [
            "calibre.exe",
            "Calibre"
        ],
        [
            "ebook-edit.exe",
            "Calibre E-Book Editor"
        ],
        [
            "ebook-viewer.exe",
            "Calibre E-Book Viewer"
        ],
        [
            "lrfviewer.exe",
            "Calibre LRF Viewer"
        ]
    ],
    "checkver": {
        "github": "https://github.com/kovidgoyal/calibre"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.calibre-ebook.com/$version/calibre-64bit-$version.msi",
                "hash": {
                    "url": "https://calibre-ebook.com/signatures/calibre-64bit-$version.msi.sha512"
                }
            }
        }
    }
}
